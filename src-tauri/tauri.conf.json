{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "monic-laundry-pos",
  "version": "0.1.0",
  "identifier": "com.monic.laundry.pos",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Monic Laundry POS",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "Light"
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "tooltip": "Monic Laundry POS"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Monic Laundry",
    "category": "Business",
    "shortDescription": "Point of Sale System for Laundry Business",
    "longDescription": "A comprehensive point of sale system designed specifically for laundry businesses, featuring order management, customer tracking, and receipt printing.",
    "resources": [],
    "copyright": "Copyright Â© 2024 Monic Laundry. All rights reserved.",
    "licenseFile": null,
    "externalBin": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "plugins": {
    "dialog": {},
    "fs": {
      "scope": {
        "allow": ["$TEMP/**", "$APPDATA/**"],
        "deny": []
      }
    },
    "shell": {
      "scope": {
        "allow": [
          {
            "name": "open-pdf",
            "cmd": "cmd",
            "args": ["/C", "start", "", { "validator": "\\S+" }],
            "sidecar": false
          }
        ],
        "deny": []
      }
    }
  }
}
